<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aditya.videoapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Player" />
        <activity android:name=".List" />
        <activity android:name=".fullActivity" />
        <activity
            android:name=".trialActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="@string/title_activity_trial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Choice" />
        <activity android:name=".vPlayer" />
        <activity android:name=".Hollywood" />
        <activity android:name=".Bollywood" />
        <activity android:name=".TV" />
        <activity android:name=".Trailer"></activity>
    </application>

</manifest>